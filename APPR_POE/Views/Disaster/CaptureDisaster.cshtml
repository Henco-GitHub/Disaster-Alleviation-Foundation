@model disaster

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>


@{
    //check user
    var role = Accessor.HttpContext.Session.GetString("auth");

    if (role != "Approved")
    {
        Context.Response.Redirect("/User/Login/");
    }

}

<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">           
              <div class="card-body p-4 p-lg-5 text-black">
                <form method="post">

                    <div asp-validation-summary="All">
                    </div>

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0" style="align-content: center">Capture a new disaster</span>
                  </div>


                  <div class="form-outline mb-4">
                      Starting date:
                    <input asp-for="startDate" class="form-control" placeholder="Start date of disaster" required/>                 
                  </div>


                  <div class="form-outline mb-4">
                      Ending date:
                       <input asp-for="endDate" class="form-control" placeholder="End date of disaster" required/>
                  </div>

                  <div class="form-outline mb-4">
                       <input asp-for="disasterLocation" class="form-control" placeholder="Location of disaster" required/>
                  </div>

                  <div class="form-outline mb-4">
                       <input asp-for="disasterDesc" class="form-control" placeholder="Description of disaster" required/>
                  </div>

                  <div class="form-outline mb-4">
                       <input asp-for="aidType" class="form-control" placeholder="Describe required aid type needed" required/>
                  </div>


                  <div class="pt-1 mb-4">
                       <button onclick="javascript:history.back()" class="btn btn-primary" style="width:170px"><i style="font-size: 14px;" class="bi bi-arrow-left-square"></i>&nbsp;&nbsp;Back</button>
                    <button type="submit" class="btn btn-primary" style="width:170px; background-color: green; border-color: green"><i class="bi bi-record-circle"></i>&nbsp;&nbsp;Capture disaster</button>
                  </div>
                </form>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>

function redirectToHome() {
    window.location.href = "/User/Home";
}





</script>