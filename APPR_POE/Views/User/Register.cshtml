
@model users

@{
    var message = Accessor.HttpContext.Session.GetString("message");
}


@if (TempData["message"] != null)
{
    <script type="text/javascript">
        window.onload = function() {
            alert("Passwords do not match");
        };
    </script>
}

@{
    //check user
    Accessor.HttpContext.Session.Clear();
}

<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            
              <div class="card-body p-4 p-lg-5 text-black">

                <form method="post">

                    <div asp-validation-summary="All">
                    </div>

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Register</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign up for a new account</h5>

                  <div class="form-outline mb-4">
                    <input asp-for="userName" class="form-control" placeholder="Name" required/>
                  </div>

                  <div class="form-outline mb-4">
                    <input asp-for="userSurname" class="form-control" placeholder="Surname" required/>
                  </div>

                  <div class="form-outline mb-4">
                       <input asp-for="userAge" class="form-control" placeholder="Age" required/>
                  </div>

                  <div class="form-outline mb-4">
                       <input asp-for="userEmail" class="form-control" placeholder="Email address" required/>
                  </div>

                  <div class="form-outline mb-4">
                       <input asp-for="userPassword" class="form-control" placeholder="Password" required/>
                  </div>

                  <div class="form-outline mb-4">
                       <input asp-for="userPasswordConfirm" class="form-control" placeholder="Confirm Password" required/>
                  </div>

                  

                  <div class="pt-1 mb-4">
                    <button type="submit" class="btn btn-primary" style="width:150px">Register</button>
                    <button onclick="redirectBack()" class="btn btn-primary" style="width:150px">Back</button>
                  </div>

                  
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Have an account? <a href="Login"
                      style="color: #393f81;">Login here</a></p>
                </form>

              </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



<script>

    function redirectBack() {
        window.location.href = "/User/Login";
    }

</script>