
@model admin





<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            
            
              <div class="card-body p-4 p-lg-5 text-black">

                <form method="post">
                         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Login as Admin</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                  <div class="form-outline mb-4">
                    <input asp-for="adminEmail" class="form-control" placeholder="Email" required/>
                    <span asp-validation-for="adminEmail" class="text-danger"></span>
                  </div>

                  <div class="form-outline mb-4">
                      <input asp-for="adminPassword" class="form-control" placeholder="Password" required/>
                  </div>

                  <div class="pt-1 mb-4">
                    <button type="submit" class="btn btn-primary" style="width:150px">Login</button>
                  </div>

                  
                 
                      
                    


                </form>

              </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



